<match fwd.**>
  type forward
  send_timeout 60s
  recover_wait 10s
  heartbeat_type tcp
  heartbeat_interval 1s
  phi_threshold 16
  hard_timeout 60s

  buffer_type file
  buffer_path /var/log/td-agent/buffer/forward*.buffer

  <server>
    name growth.kazu634.<%= node['fluentd-custom']['domain'] %>
    host growth.kazu634.<%= node['fluentd-custom']['domain'] %>
    port 24224
    weight 60
  </server>
</match>
