<match notification.**>
  type forest
  subtype copy

  <template>
    <store>
      type slack
      webhook_url <%= @webhook_url %>
      team kazu634
      channel %23ops
      username kazu-chan
      color ${tag_parts[1]}
      icon_emoji :honeybee:
      buffer_path /var/log/td-agent/buffer/notification_${tag_parts[1]}_${tag_parts[2]}_buffer*.buffer
      flush_interval 60s
    </store>

    <store>
      type file
      path /tmp/notificaiton.log
      buffer_type file
      buffer_path /var/log/td-agent/buffer/notification_${tag_parts[1]}_${tag_parts[2]}_*.buffer
    </store>
  </template>
</match>
