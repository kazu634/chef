server {
  # allow access from localhost
  listen localhost:80;

  root /usr/share/nginx/html;
  index index.html index.htm;

  location / {

    try_files $uri $uri/ /index.html;

  }
}

# Denies the access without the pre-defined virtual host.
server {
  listen 80 default_server;
    server_name _;

  return 444;
  }
