server {
  listen 80;
  server_name <%= node[:tech][:hostname] %>.<%= node[:tech][:domain] %>;

  access_log  /var/log/nginx/tech.access.log ltsv;
  error_log   /var/log/nginx/tech.error.log;

  root /var/www/nginx-default/domain/tech/;
  index index.html index.htm;

  location / {
    gzip on;
    try_files $uri $uri/ /  index.html;
  }

  location = /index.html {
    gzip on;
    expires 5m;
  }

  location ~* /.*\.(js|css)$ {
    gzip on;
    expires 3d;
  }

  location ~* /.*\.html$ {
    gzip on;
    expires 24h;
  }

  location /images {
    gzip on;
    expires max;
  }
}
